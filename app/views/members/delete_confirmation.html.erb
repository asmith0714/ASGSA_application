<div style="margin-left: 1%">
  <h1>Are you sure you want to delete this member?</h1>
  <% if @member.errors.any? %>
          <div style="color: red; text-align: center">
              <% member.errors.each do |error| %>
                <div>
                  <%= error.full_message %>
                </div>
              <% end %>
          </div>
        <% end %>
  <div style="max-width: 80%">
  <%= render @member %>

  </br>

  <div style="margin-bottom: 1%">
    <%= button_to "Delete this member", @member, method: :delete, form: { style: "display: inline;"}, style: "background-color: #dc3545; color: white" %>
    <%= button_to "Cancel", members_path, method: :get, form: { style: "display: inline;"}%>
  </div>
</div>

