Notification <%= @notification.title %>

<%= @notification.description %>

<% if @notification.event %>
    Event: <%= @notification.event.name %><br>
    Time: <%= @notification.event.start_time&.strftime("%I:%M %p") %> - <%= @notification.event.end_time&.strftime("%I:%M %p") %><br>
    Date: <%= @notification.event.date %><br>
    Capacity: <%= @notification.event.capacity || 'No Limit' %><br>
    Points: <%= @notification.event.points %>
<% end %>