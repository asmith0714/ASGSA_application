<%= link_to("Back to List", events_path, :class => 'back-link') %>

<div class="events new">
  <h2>Create Event</h2>

  <%= form_for(@event) do |f| %>
    <% # url: events_path, method: 'post' %>

    <%= render(partial: 'form', locals: {f: f}) %>

    <div class="field">
      <%= f.label :send_email, 'Send email to all members' %>
      <%= check_box_tag :send_email %>
    </div>

    <div class="form-buttons">
      <%= f.submit("Create Event") %>
    </div>

  <% end %>
</div>
