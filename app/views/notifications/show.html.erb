<div class="d-flex align-items-center vh-100" style="background-image: url(<%= asset_path 'tamu_stock3.jpg' %>); background-size: cover; padding: 5%">
  <div class="card mx-auto" style="width: 40rem;">
    <div class="card-header">
      <%= link_to "Back To Notifications", notifications_path, class: "btn btn-primary mr-1" %>
      <%= form_with(model: @notification, method: :delete, html: { onsubmit: "return confirm('This will be removed for all members as well. Are you sure you want to delete this notification?');", style: "display: inline" }) do |form| %>
          <%= form.button "Delete Notification", type: :submit, class: "btn btn-primary mr-1"%>
      <% end %>
      <h1 class="mt-3" style="text-align: center"><strong><%= @notification.title %></strong></h1>
      <div class="text-center">
        Seen By: <%= @notification.member_notifications.where(seen: :true).count %> / <%= @notification.member_notifications.count %> Members
      </div>
    </div>
      
    <div class="card-body">

      <div class="mb-3 top-bottom-text">
        <strong>Description</strong>
        <%= @notification.description %>
      </div>
    
      <% if @notification.event %>
        <div class="mb-3 top-bottom-text">
          <strong>Linked Event</strong>
          <%= @notification.event.name %>
        </div>
        <%= link_to "View Event Details", @notification.event, class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
