<div class="d-flex align-items-center vh-100" style="background-image: url(<%= asset_path 'tamu_stock3.jpg' %>); background-size: cover; padding: 5%">
  <div class="card mx-auto" style="width: 40rem;">
    <div class="card-header">
      <div class="row pl-2">
      <%= link_to "Back Notifications", member_notifications_path, class: "btn btn-primary mr-1" %>

      <% if @member_notification.seen %>
        <%= button_to "Toggle Unseen", toggle_seen_member_notification_path(@member_notification), method: :patch, class: "btn btn-primary mr-1"%>
      <% else %>
        <%= button_to "Toggle Seen", toggle_seen_member_notification_path(@member_notification), method: :patch, class: "btn btn-primary mr-1"%>
      <% end %>

      <%= form_with(model: @member_notification, method: :delete, html: { onsubmit: "return confirm('Are you sure you want to delete this notification?');", style: "display: inline" }) do |form| %>
          <%= form.button "Delete Notification", type: :submit, class: "btn btn-primary mr-1"%>
      <% end %>
      </div>
      <h1 class="mt-3" style="text-align: center"><strong><%= @member_notification.notification.title %></strong></h1>
      <div class="text-center">
        Seen Notification: 
        <% if @member_notification.seen %>
          <i class="far fa-check-square"></i>
        <% else %>
          <i class="fa-regular fa-square"></i>
        <% end %>
      </div>
    </div>
      
    <div class="card-body">
      <div class="mb-3 top-bottom-text">
        <strong>Description</strong>
        <%= @member_notification.notification.description %>
      </div>
    
      <% if @member_notification.notification.event %>
        <div class="mb-3 top-bottom-text">
          <strong>Linked Event</strong>
          <%= @member_notification.notification.event.name %>
        </div>
        <%= link_to "View Event Details", @member_notification.notification.event, class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>